<% provide(:title, t(".title")) %>
<h1 class="text-center p-5"><%= t(".title") %></h1>

<div class="row">
  <div class="col-md-10 col-lg-8 mx-auto w-50">
  <%= form_with(model: @child) do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :gender, class: "form-label" %>
      <%= f.select :gender, ["男の子", "女の子"], class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :birthday, class: "form-label" %>
      <%= f.date_select :birthday, { prompt: { day: '日', month: '月', year: '年' }, start_year: Date.current.year - 6, end_year: Date.current.year, order: [:year, :month, :day] }, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.hidden_field :family_id, value: @child.family_id %>
    </div>
    <div class="mb-3 d-grid gap-2">
      <%= f.submit t(".button_text"), class: "btn btn-warning btn-lg" %>
    </div>
  <% end %>
  </div>
</div>
