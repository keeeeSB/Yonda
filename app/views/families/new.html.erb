<% provide(:title, t(".title")) %>
<h1 class="text-center p-5"><%= t(".title") %></h1>

<div class="row">
  <div class="col-md-10 col-lg-8 mx-auto w-50">
    <%= form_with(model: @family) do |f| %>
      <%# <%= render 'shared/error_messages' %> 
      <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control fs-4", placeholder: "ひらがなでお願いします" %>
      </div>
      <div class="mb-3">
        <%= f.label :introduction, class: "form-label" %>
        <%= f.text_field :introduction, class: "form-control fs-4" %>
      </div>
      <div class="mb-3 d-grid gap-2">
        <%= f.submit t(".button_text"), class: "btn btn-warning btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
