<% provide(:title, t(".title")) %>
<h1 class="text-center p-5"><%= t(".title") %></h1>

<div class="row">
  <div class="col-md-10 col-lg-8 mx-auto w-50">
    <h2 class="text-center text-success">
      <%= "#{@family.name}å®¶" %>
    </h2>
    <h3 class="text-center border-bottom pb-3 mb-3">
      <%= @family.introduction %>
    </h3>

    <h4 class="text-secondary"><%= t(".family") %></h4>
    <div class="text-center fs-3 border-bottom pb-3 mb-3">
      <% @family.users.each do |user| %>
        <p><%= user.name %></p>
      <% end %>
    </div>

    <h4 class="text-secondary"><%= t(".child") %></h4>
    <div class="text-center fs-3 border-bottom pb-3 mb-3">
      <% @family.children.each do |child| %>
        <ul class="nav justify-content-center pb-3 mb-3">
          <li class="px-3 text-body-secondary"><%= child.name %></li>
          <li class="px-3"><%= child.gender %></li>
          <li class="px-3"><%= child.birthday %></li>
        </ul>
      <% end %>
      <%= link_to t(".button_text"), new_child_path, class: "btn btn-outline-warning" %>
    </div>
  </div>
</div>
