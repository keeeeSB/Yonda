<% provide(:title, t(".title")) %>
<h1 class="text-center p-5"><%= t(".title") %></h1>

<div class="row">
  <div class="col-md-10 col-lg-8 mx-auto w-50">
    <%= form_with(model: @user, url: password_reset_path(params[:id])) do |f| %>
      <%= hidden_field_tag :email, @user.email %>
      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :email, placeholder: "新しいパスワードを入力してください", class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, placeholder: "パスワードをもう一度入力してください", class: "form-control" %>
      </div>
      <div class="mb-3 d-grid gap-2">
        <%= f.submit t(".password_reset"), class: "btn btn-outline-info btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
