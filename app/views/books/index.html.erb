<% provide(:title, t(".title")) %>

<% if @book.present? %>
  <h1 class="text-center p-5"><%= t(".sub-title") %></h1>
  <div class="container">
    <div class="row row-cols-1 row-cols-md-2">
      <%= render @books %>
    </div>
  </div>
<% else %>
  <h3 class="text-center top-text p-3"><%= t(".none") %></h3>
<% end %>
<%= paginate @books %>