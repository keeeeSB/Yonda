<div class="col row-cols-1 row-cols-md-2 p-1 text-center">
  <div class="card mx-auto library-info<%= book.isbn %>" style="width: 11rem; height: 11rem">
      <%= image_tag book.thumbnail_url.present? ? book.thumbnail_url : 'sample.jpg', class: 'card-img-top book-img' %>
      <div class="card-title p-1"><%= book.title.truncate(10) %></div>
  </div>
</div>