<% provide(:title, "ホーム") %>
<h1 class="text-center p-5">みんなの記録</h1>

<div class="container">
  <% @read_records.each do |read_record| %>
    <div class="card mb-3 mx-auto" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-4">
          <%= image_tag read_record.book.image_link, class: "img-fluid rounded-start" %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h4 class="card-title"><%= read_record.book.title %></h4>
            <h5 class="card-text">よんだ人 : <%= read_record.user.name %></h5>
            <h5 class="card-text">よんだ日付 : <%= read_record.read_date %></h5>
            <% if read_record.body.present? %>
              <h5 class="card-text">コメント : <%= read_record.body %></h5>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
