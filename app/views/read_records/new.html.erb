<% provide(:title, t(".title")) %>
<h1 class="text-center p-5"><%= t(".title") %></h1>

<div class="row">
  <div class="col-md-10 col-lg-8 mx-auto w-50">
    <div class="mx-auto" style="width: 15rem; height: 23rem">
      <%= image_tag @book.image_link.present? ? @book.image_link : 'sample.png', class: 'card-img-top book-img' %>
      <div class="fs-4 p-3"><%= @book.title.truncate(10) %></div>
    </div>
    <%= form_with(model: @read_record) do |f| %>
      <%= render 'shared/error_messages', object: @read_record %>
      <div class="mb-3">
        <%= f.hidden_field :book_id, value: @read_record.book_id %>
      </div>
      <div class="mb-3">
        <%= f.hidden_field :family_id, value: @read_record.family_id %>
      </div>
      <div class="mb-3">
        <%= f.label :child_id, class: "form-label" %>
        <%= f.select :child_id, options_for_select(@read_record.family.children.map { |child| [child.name, child.id] }), {}, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :read_date, class: "form-label" %>
        <%= f.date_field :read_date, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :body, class: "form-label" %>
        <%= f.text_field :body, class: "form-control" %>
      </div>
      <div class="mb-3 d-grid gap-2">
        <%= f.submit t(".button_text"), class: "btn btn-warning btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
