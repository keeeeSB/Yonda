<% provide(:title, t(".title")) %>
<h1 class="text-center p-5"><%= t(".title") %></h1>

<div class="row">
  <div class="col-md-10 col-lg-8 mx-auto w-50">
    <%= form_with(url: login_path, scope: :session) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control fs-4" %>
      </div>
      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control fs-4" %>
      </div>
      <div class="form-check">
        <%= f.label :remember_me, class: "form-check-label" do %>
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <span><%= t(".remember_me") %></span>
        <% end %>
      </div>
      <div class="mb-3 d-grid gap-2">
        <%= link_to t(".password_forget"), new_password_reset_path, class: "btn btn-outline-danger btn-lg" %>
      </div>
      <div class="mb-3 d-grid gap-2">
        <%= f.submit t(".login"), class: "btn btn-warning btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
